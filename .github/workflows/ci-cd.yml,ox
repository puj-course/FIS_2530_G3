name: CI-CD Pipeline

on:
  pull_request:
    branches:
      - main
    types:
      - closed
  workflow_dispatch:

permissions:
  contents: read
  checks: write

jobs:
  build-test-deploy:
    # Solo se ejecuta si el PR fue mergeado o si se ejecuta manualmente
    if: github.event.pull_request.merged == true || github.event_name == 'workflow_dispatch'
    runs-on: ubuntu-latest

    steps:
      # 1️⃣ Clona el repositorio
      - name: Checkout repository
        uses: actions/checkout@v4

      # 2️⃣ Configura el entorno Java
      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '17'

      # 3️⃣ Construye el proyecto con Maven
      - name: Build with Maven
        run: mvn clean package -DskipTests

      # 4️⃣ Ejecuta pruebas unitarias
      - name: Run Unit Tests
        run: mvn test

      # 5️⃣ Guarda resultados de pruebas como artefacto
      - name: Upload Test Results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: test-results
          path: target/surefire-reports/

      # 6️⃣ Guarda el .jar generado
      - name: Upload JAR Artifact
        if: success()
        uses: actions/upload-artifact@v4
        with:
          name: build-jar
          path: target/*.jar

      # 7️⃣ Simula un despliegue (Deployment simulado)
      - name: Deploy Application (simulated)
        run: |
          echo "Desplegando aplicación en entorno de pruebas..."
          echo "Aplicación desplegada correctamente ✅"
